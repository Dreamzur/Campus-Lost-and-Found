<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FIULostAndFound">
        <activity
            android:name=".SubmitItemActivity"
            android:exported="false"
            android:label="@string/title_activity_submit_item"
            android:theme="@style/Theme.FIULostAndFound" />
        <activity
            android:name=".FoundItemsActivity"
            android:exported="false"
            android:label="@string/title_activity_found_items"
            android:theme="@style/Theme.FIULostAndFound" />
        <activity
            android:name=".LostItemsActivity"
            android:exported="false"
            android:label="@string/title_activity_lost_items"
            android:theme="@style/Theme.FIULostAndFound" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FIULostAndFound">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddItemActivity" />
    </application>

</manifest>